{
  "name": "performance",
  "license": "GPL-2.0-or-later",
  "repository": "git+https://github.com/WordPress/performance.git",
  "devDependencies": {
    "@octokit/rest": "^19.0.8",
    "@wordpress/env": "^7.0.0",
    "@wordpress/scripts": "^26.4.0",
    "chalk": "^4.1.2",
    "commander": "^10.0.1",
    "fast-glob": "^3.2.12",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "lodash": "4.17.21"
  },
  "scripts": {
    "changelog": "./bin/plugin/cli.js changelog",
    "since": "./bin/plugin/cli.js since",
    "readme": "./bin/plugin/cli.js readme",
    "translations": "./bin/plugin/cli.js translations",
    "build-plugins": "./bin/plugin/cli.js build-plugins",
    "test-plugins": "./bin/plugin/cli.js test-plugins",
    "test-plugins-multisite": "./bin/plugin/cli.js test-plugins --sitetype=multi",
    "enabled-modules": "./bin/plugin/cli.js enabled-modules",
    "format-js": "wp-scripts format ./bin",
    "lint-js": "wp-scripts lint-js ./bin",
    "format-php": "wp-env run composer run-script format",
    "prelint-php": "wp-env run composer 'install --no-interaction'",
    "lint-php": "wp-env run composer run-script lint",
    "pretest-php": "wp-env run cli --env-cwd=/var/www/html/wp-content/plugins/$(basename $(pwd)) composer 'install --no-interaction'",
    "test-php": "wp-env run tests-wordpress 'env WORDPRESS_TABLE_PREFIX=wptests_ /var/www/html/wp-content/plugins/$(basename $(pwd))/vendor/bin/phpunit -c /var/www/html/wp-content/plugins/$(basename $(pwd))/phpunit.xml.dist --verbose'",
    "pretest-php-multisite": "npm run pretest-php",
    "test-php-multisite": "wp-env run tests-wordpress 'env WP_MULTISITE=1 WORDPRESS_TABLE_PREFIX=wptests_ /var/www/html/wp-content/plugins/$(basename $(pwd))/vendor/bin/phpunit -c /var/www/html/wp-content/plugins/$(basename $(pwd))/phpunit.xml.dist --verbose'",
    "wp-env": "wp-env",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.php": [
      "composer run-script lint"
    ]
  }
}
